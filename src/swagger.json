{
  "openapi": "3.0.0",
  "info": {
    "title": "API Authentication",
    "description": "API REST authentication with NODE.js",
    "version": "0.0.1",
    "contact": {
      "email": "carlos.clayton@gmail.com"
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "User authentication",
        "description": "User authentication",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "E-mail",
                  "password": "Password"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success"
          },
          "500": {
            "description": "Error"
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": ["User"],
        "summary": "Create user",
        "description": "Create new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "driver_licence": {
                    "type": "string"
                  },
                  "role": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Name",
                  "email": "E-mail",
                  "username": "Username",
                  "password": "Password",
                  "driver_licence": "Driver licence",
                  "role": "ADMIN|USER"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Error"
          }
        }
      },
      "get": {
        "tags": ["User"],
        "summary": "List users",
        "description": "List all users",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "username": {
                        "type": "string"
                      },
                      "password": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "driver_licence": {
                        "type": "string"
                      },
                      "role": {
                        "type": "string"
                      },
                      "avatar": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": ["User"],
        "summary": "Find user",
        "description": "Find user by ID",
        "parameters":[ {
          "name": "id",
          "in": "path",
          "schema": {
            "type": "string",
            "required": true
          }
        }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "username": {
                        "type": "string"
                      },
                      "password": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "driver_licence": {
                        "type": "string"
                      },
                      "role": {
                        "type": "string"
                      },
                      "avatar": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["User"],
        "summary": "Destroy user",
        "description": "Destroy user by ID",
        "parameters":[ {
          "name": "id",
          "in": "path",
          "schema": {
            "type": "string",
            "required": true
          }
        }],
        "responses": {
          "200": {
            "description": "Destroy with success"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "put": {
        "tags": ["User"],
        "summary": "Update user",
        "description": "Update user",
        "parameters":[ {
          "name": "id",
          "in": "path",
          "schema": {
            "type": "string",
            "required": true
          }
        }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "driver_licence": {
                    "type": "string"
                  },
                  "role": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Name",
                  "email": "E-mail",
                  "username": "Username",
                  "password": "Password",
                  "driver_licence": "Driver licence",
                  "role": "ADMIN|USER"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Updated"
          },
          "500": {
            "description": "Error"
          }
        }
      }
    },
    "/users/avatar": {
      "patch": {
        "tags": ["User"],
        "summary": "Update avatar",
        "description": "Update avatar",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "upload": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "example": {
                  "upload": "file.png"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Updated"
          },
          "500": {
            "description": "Error"
          }
        }
      }
    }
  }
}